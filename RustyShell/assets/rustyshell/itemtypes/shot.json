{
    "code": "shot",
    "class": "ItemAmmunition",
    "variantgroups": [
      { "code": "class" ,   "states": ["4pdr", "12pdr"]},
      { "code": "shape" ,   "states": ["round"]},
      { "code": "type",     "states": ["common", "explosive", "incendiary"]},
      { "code": "material", "states": ["stone", "lead", "iron"]}
    ],
    "allowedVariants": [
      "shot-4pdr-round-common-*",
      "shot-12pdr-*"
    ],
    "skipVariants": [
      "shot-*-explosive-stone",
      "shot-*-incendiary-stone"
    ],
    "maxstacksize": 1,
    "creativeinventory": { "general": ["*"], "items": ["*"], "rustyshell": ["*"] },
    "attributes": {

      "damageByType": {
        "shot-4pdr-*-stone"  : 50,
        "shot-4pdr-*"        : 60,
        "shot-12pdr-*-stone" : 60,
        "shot-12pdr-*"       : 70
      },

      "blastRadiusByType": {
        "shot-4pdr-round-common-stone" : 1,
        "shot-4pdr-round-common-*"     : 4,

        "shot-12pdr-round-common-stone" : 4,
        "shot-12pdr-round-common-*"     : 5,
        "shot-12pdr-round-explosive-*"  : 7,
        "shot-12pdr-round-incendiary-*" : 8
      },

      "injureRadiusByType": {
        "shot-4pdr-round-common-stone" : 2,
        "shot-4pdr-round-common-*"     : 5,

        "shot-12pdr-round-common-stone" : 6,
        "shot-12pdr-round-common-*"     : 7,
        "shot-12pdr-round-explosive-*"  : 12,
        "shot-12pdr-round-incendiary-*" : 16
      },

      "canBounceByType": { "*-round-common-*": true },

      "flightExpectancyByType": {
        "*-explosive-lead" : 3.00,
        "*-explosive-iron" : 3.25,
        "*-incendiary-lead" : 3.25,
        "*-incendiary-iron" : 3.50,
        "*-stone-*"  : 8.0,
        "*-lead-*"   : 7.0,
        "*-iron-*"   : 8.0
      },

      "entityCode" : "rustyshell:shot-{class}-{material}",
      "handbook"   : { "groupBy": [ "shot-{class}-*" ]},

      "shelvable": true
    },
    "shapeByType": {
      "shot-4pdr-*"               : { "base": "ammunition/shot", "scale": 0.75 },
      "shot-12pdr-round-common-*" : { "base": "ammunition/shot" },
      "shot-12pdr-*"              : { "base": "ammunition/shot-hollow-fuzed" }
    },
    "texturesByType": {
      "*-stone" : { "material": { "base": "game:block/stone/rock/granite1" }},
      "*"       : { "material": { "base": "game:block/metal/ingot/{material}" }}
    },
    "behaviors": [{ "name": "GroundStorable", "properties": { "layout": "Quadrants", "collisionBox": { "x1": 0, "y1": 0, "z1": 0, "x2": 1, "y2": 0.4, "z2": 1 } }}],
    "heldTpIdleAnimationByType": {
      "shot-4pdr-*"  : "holdbothhands",
      "shot-12pdr-*" : "holdbothhandslarge"
    },
    "heldTpUseAnimation": "twohandplaceblock",
    "tpHandTransform": {
      "translationByType": { "*-4pdr-*" : { "x": -0.7, "y": -0.3, "z": -0.6 }, "*-12pdr-*" : { "x": -0.7, "y": -0.3, "z": -0.4 }} ,
      "rotation":          { "x":    0, "y":    0, "z": -110 },
      "origin":            { "x":  0.5, "y":  0.2, "z":  0.5 },
      "scale": 0.8
    },
    "guiTransform": {
      "rotation": { "x": 45,  "y": 45,  "z": 24 },
      "origin":   { "x": 0.5, "y": 0.2, "z": 0.5 },
      "scale": 2.3
    },
    "groundTransform": {
      "translation": { "x":  0, "y": 0.05, "z":  0 },
      "rotation":    { "x": 90, "y":    0, "z": 20 },
      "scale": 3
    }
}