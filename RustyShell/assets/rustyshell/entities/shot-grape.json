{
  "code":  "shot",
  "class": "EntityHighCaliber",
  "variantgroups": [
    { "code": "class" ,   "states": ["grape"]},
		{ "code": "shape" ,   "states": ["blunt", "submunition"]},
    { "code": "material", "states": ["linen", "stone", "lead", "copper", "steel"]}
  ],
  "skipVariants": [
    "shot-grape-blunt-stone",
    "shot-grape-blunt-lead",
    "shot-grape-blunt-copper",
    "shot-grape-blunt-steel",
    "shot-grape-submunition-linen"
  ],
  "attributes": { "physics": { "groundDragFactor": 1 }},
  "hitboxSize": { "x": 0.4, "y": 0.2 },
  "client": {
    "behaviors": [{ "code": "passivephysics" }, { "code": "interpolateposition" }],

    "renderer"    : "Shape",
		"shapeByType" : {
			"*-submunition-*" : { "base" : "game:entity/bullet" },
